@{
    ViewBag.Title = "Report";
}

<!-- Supervisor Switch -->
<table>
    <tr>
        <td>
            <h4>督導：&nbsp;&nbsp;</h4>
        </td>
        <td>
            <div class="dropdown">
                <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                    <span id="SupervisorListText">---請選擇---</span>&nbsp;&nbsp;<span class="caret"></span>
                </button>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenu1" id="SupervisorList">
                    <li><a href="#0">---請選擇---</a></li>
                </ul>
            </div>
        </td>
    </tr>
</table>
<br />
<br />
<div role="tabpanel">
    <!-- Nav tabs -->
    <ul class="nav nav-tabs" role="tablist">
        <li role="presentation" class="active"><a href="#rptWorkRecord" role="tab" data-toggle="tab">照顧服務員工作時數紀錄表</a></li>
        <li role="presentation"><a href="#rptCaseServiceRecord" role="tab" data-toggle="tab">個案服務紀錄表</a></li>
    </ul>
    <!-- Tab panes -->
    <div class="tab-content">
        <div role="tabpanel" class="tab-pane fade in active" id="rptWorkRecord">
            <br />
            <div class="form-horizontal">
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">電子郵件：</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" id="rptWorkRecord_export_email" placeholder="多筆用半形逗號來間隔">
                        <br />
                    </div>
                    <div class="col-sm-1">
                        <div class="dropdown">
                            <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown" id="btnMultiExportWorkRecord">
                                批量匯出
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu" id="btnMultiExportWorkRecord_item">
                                <li><a href="#Excel">Excel</a></li>
                                @*<li><a href="#PDF">PDF</a></li>*@
                                <li><a href="#Word">Word</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div id="gridRptWorkRecord"></div>
        </div>
        <div role="tabpanel" class="tab-pane fade in" id="rptCaseServiceRecord">
            <br />
            <div class="form-horizontal">
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">電子郵件：</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" id="rptCaseServiceRecord_export_email" placeholder="多筆用半形逗號來間格">
                        <br />
                    </div>
                    <div class="col-sm-1">
                        <div class="dropdown">
                            <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown" id="btnMultiExportCaseServiceRecord">
                                批量匯出
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu" id="btnMultiExportCaseServiceRecord_item">
                                <li><a href="#Excel">Excel</a></li>
                                @*<li><a href="#PDF">PDF</a></li>*@
                                <li><a href="#Word">Word</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div id="gridRptCaseServiceRecord"></div>
        </div>
    </div>
</div>
@Styles.Render("~/Content/site/Supervisor.css")
@Scripts.Render("~/Scripts/Supervisor/Report.js")
